{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "ES2019",
      "DOM"
    ],
    "types": [
      "reflect-metadata"
    ],
    "declaration": true,
    "composite": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./packages",
    "paths": {
      "@namespace/app-module": [
        "app-module/src"
      ]
    },
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}