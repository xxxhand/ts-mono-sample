{
  "name": "root",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "clean": "npx lerna run --parallel clean",
    "build": "npx run-p clean && run-s build:all",
    "build:all": "npx tsc -b",
    "test:local": "npm test --envir=local",
    "test": "cross-env NODE_ENV=$npm_config_envir node --max_old_space_size=4096 ./node_modules/.bin/jest --runInBand --logHeapUsage --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "lerna": "3.22.1",
    "typescript": "4.0.5",
    "jest": "26.6.3",
    "ts-jest": "26.4.3",
    "@types/jest": "26.0.15",
    "ts-node": "9.0.0",
    "npm-run-all": "4.1.5",
    "jest-html-reporters": "2.1.0",
    "cross-env": "7.0.2"
  }
}
